<div id="home-banner" class="row">
 <!-- main slider -->
  <div id="home-carousel" class="carousel slide" data-ride="carousel">
     <!-- Indicators -->
     <ol class="carousel-indicators">
        <li data-target="#home-carousel" data-slide-to="0" class=""></li>
        <li data-target="#home-carousel" data-slide-to="1" class="active"></li>
     </ol>
     <!-- Wrapper for slides -->
     <div class="carousel-inner">
        <div class="item">
           <img src=<%=asset_path("fifa2.png")%> alt="demo_slide_2" style="height:430px">
           <div class="jumbotron carousel-caption">
              <h1><i class="fa fa-cube"></i> Fifa 2018</h1>
              <p>Get latest games for the year!</p>
              <p><a href=<%=root_path%> class="btn btn-primary btn-lg" role="button">Learn More<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
              </p>
           </div>
        </div>
        <div class="item active">
           <img src=<%=asset_path("heros2.png")%> alt="demo_slide_1" style="height:430px;margin-left: 50%;">
           <div class="jumbotron carousel-caption left">
              <h1>Movies</h1>
              <p>Heros all are here. Awesome.</p>
              <p><a href=<%=root_path%> class="btn btn-primary btn-lg" role="button">Shop Now <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
              </p>
           </div>
        </div>
     </div>
     <!-- Controls -->
     <a class="left carousel-control" href="#home-carousel" data-slide="prev">
     <i class="fa fa-angle-left"></i>
     </a>
     <a class="right carousel-control" href="#home-carousel" data-slide="next">
     <i class="fa fa-angle-right"></i>
     </a>
  </div>
  <!-- End main slider -->
</div>

 <section id="featured-products" class="page-section row">

    <h2 class="section-title"><span> <%=@featured ? "Featured" : "Latest" %> Products</span></h2>
    <!--item product  -->
    <% @products.each do |product| %>
      <%= render 'product', product: product %>
    <% end %>
 </section>



