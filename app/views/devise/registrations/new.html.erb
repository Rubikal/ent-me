<div id="banner" class="custom-padding jumbotron row"></div>
<%= bootstrap_devise_error_messages! %>
<section class="page-section row col-split-2">
  <div class="custom-col-offset col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <h2>Register a New Account</h2>
      <div class="row">
        <div class="col-xs-12 form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email"%>
          <%= f.label :email %>
        </div>
        <div class="col-xs-12 form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
          <%= f.label :password %>
        </div>
        <div class="col-xs-12 form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: "Name"%>
          <%= f.label :name %>
        </div>
      </div>
      <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-social btn-facebook btn-fb' do %>
          <span class="fa fa-facebook"></span>
          Sign up with Facebook
      <% end %>
      <button class="btn btn-primary pull-right">Submit <i class="fa fa-arrow-right"></i></button>
    <% end %>
  </div>
</section>
